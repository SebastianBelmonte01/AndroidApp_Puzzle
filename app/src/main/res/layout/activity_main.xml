<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/centerRow"
        android:id="@+id/firstRow">
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="1"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvFirst"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="2"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvSecond"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="3"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvThird"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/centerRow">
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="4"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvFourth"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="5"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvFifth"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="6"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvSixth"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/centerRow"
        android:id="@+id/thirdRow">
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="7"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvSeventh"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_launcher_background"
            android:text="8"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvEighth"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text=""
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tvNinth"/>
    </LinearLayout>

</RelativeLayout>